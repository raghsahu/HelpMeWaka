<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".ui.customer.fragment.FragmentPostAnErrand">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/edittext_bottom_line"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />
        </LinearLayout>

            <TextView
            style="@style/item_list_text_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Select Service" />

            <LinearLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_list_text_black"
                    android:id="@+id/tv_spin_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="SELECT SERVICE"
                    android:popupBackground="@color/white"
                    android:scrollbars="none" />
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Errand Description" />

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text=" : " />

            <EditText
                android:id="@+id/et_additional_info"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight=".6"
                android:background="@null"
                android:fontFamily="@font/aileron_light"
                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="@dimen/_5sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/contact_person" />

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text=" : " />

            <EditText
                android:id="@+id/et_contact_person"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight=".6"
                android:background="@null"
                android:fontFamily="@font/aileron_light"
                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="@dimen/_5sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/contact_telephone_number" />

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text=" : " />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight=".6"
                android:background="@null"
                android:fontFamily="@font/aileron_light"
                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="@dimen/_5sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/any_special_request" />

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text=" : " />

            <EditText
                android:id="@+id/et_reqest"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight=".6"
                android:background="@null"
                android:fontFamily="@font/aileron_light"
                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="@dimen/_5sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/country" />

            <TextView
                style="@style/item_list_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text=" : " />

            <TextView
                android:id="@+id/tv_country"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".6"
                android:background="@null"
                android:fontFamily="@font/aileron_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Nigeria"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/edittext_bottom_line"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="@style/item_list_text_black"
