                 </LinearLayout>-->
                <TextView
                    android:id="@+id/tv_file_name"
                    style="@style/text_12green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="name.png" />

                <TextView
                    android:id="@+id/tv_download"
                    style="@style/text_14orange_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_download"
                    android:text="@string/click_here_to_download" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/squere_border_bg"
            android:gravity="center"
            android:text="@string/post_job"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>